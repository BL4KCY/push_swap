NAME=push_swap
CC=cc
CFLAGS=-Wall -Wextra -Werror
RM=rm -rf


SRC= 

OBJ=$(SRC:.c=.o)

$(NAME):$(OBJ)
	$(CC) $(CFLAGS) $^ -o $@
clean:
	$(RM) $(OBJ)
fclean:clean
	$(RM) $(NAME)
all:$(NAME)
re:fclean all
